<% include ./partials/header.ejs %>
<nav class="navbar navbar-default navbar-static-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand"><strong>KYURETA</strong></a>
    </div>
  </div>
</nav>
<div class="container">
  <div class="jumbotron">
      <h1>KYURETA</h1>
      <h3>A user curated portfolio of recipes from the world's most famous chefs!</h3>
      <p>Login with:</p>
      <h1></h1>
      <% if(message.length > 0) { %>
        <div class="alert alert-danger">
        <%= message %>
        </div>
        <% } %>
        <form class="form-inline" method="post" action="/" data-parsley-validate>
          <div class="form-group">
            <label for="inputEmail" class="control-label sr-only">Email</label>
            <input type="email" class="form-control" id="inputEmail" name="user[local][email]" value="" placeholder="Email" data-parsley-type="email" data-parsley-required-message="Please type in your email" required>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="control-label sr-only">Password</label>
            <input type="password" class="form-control" id="inputPassword" name="user[local][password]" value="" placeholder="Password" required>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-large btn-primary">Log in</button>
          </div>
        </form>
        <div class="form-group">
          <h1></h1>
          <p>
            New user? <a href="/signup">Sign up</a>
          </p>
        </div>
  </div>
</div>

<% include ./partials/footer.ejs %>
