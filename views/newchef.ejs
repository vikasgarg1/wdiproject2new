<div class="container">
  <div class="row">
    <h2><strong>New Chef</strong></h2>
  </div>
  <div class="row">
    <form action="/user/chef/new" method="post" data-parsley-validate>
      <div class="form-group">
        <label for="InputChef">Name of Chef</label>
        <input type="text" class="form-control" id="InputChef" name="chef[name]" placeholder="Chef Name" required>
      </div>
      <div class="form-group">
        <label for="InputCuisine">Cuisine</label>
        <input type="text" class="form-control" id="InputCuisine" name="chef[cuisine]" placeholder="Cuisine" required>
      </div>
      <div class="form-group">
        <label for="InputRestaurant">Flagship Restaurant & Location</label>
        <input type="text" class="form-control" id="InputRestaurant" name="chef[restaurant]" placeholder="Flagship Restaurant & Location" required>
      </div>
      <button type="submit" class="btn btn-default btn-success">Add</button>
    </form>
  </div>
</div>
